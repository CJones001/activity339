{
  "name": "my-heroku-app",
  "description": "A sample Heroku app for pipeline deployment",
  "repository": "https://github.com/CJones001/activity339",
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    },
    "API_KEY": {
      "description": "Your API key",
      "required": true
    }
  },
  "addons": ["heroku-postgresql:hobby-dev"],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "scripts": {
    "postdeploy": "npm run migrate"
  }
}
